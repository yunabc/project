@import '../../../css/common/index.styl';
show($opacity)
  opacity 0
  transition opacity 1s
  &.show 
    opacity $opacity
.window_mask
  position fixed
  left 0
  top 0
  right 0
  bottom 0
  background-color rgb(0,0,0);
  show(.6)
  
.window_boundingBox
  // border-1px(all,#000)
  position fixed  
  width 80%
  min-height 200px
  padding-bottom 80px
  top 50%   
  left 50%  
  transform translateX(-50%) translateY(-50%) 
  background-color #fff
  box-shadow 0 0 12px rgba(0,0,0,.5)
  show(1)
  .window_header
    background-color #333
    color #fff
    text-align left
    padding 10px
    font-size 20px
    box-sizing border-box
    .window_closeBtn
      position absolute
      right 0
      top 0 
      padding: 10px 10px
      font-size 20px
      background-color blue
      color #fff
      cursor pointer
  .window_body
    padding 30px 10px 0
    .window_promptInputWrapper
      padding-top 10px
      text-align center
      .window_promptInput
        border 1px solid #ccc
  .window_footer
    position absolute
    bottom 20px 
    width 100%
    display flex
    justify-content center
    button
      width 100px
      height 40px
      text-align center
      margin 0 30px
      background-color #ccc
      
    