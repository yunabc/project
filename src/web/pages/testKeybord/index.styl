@import '../../../css/common/index.styl'
html,body
  height 100%
.inputBox
  border-1px(top,blue)
  position fixed
  bottom 0
  width 100%
  height 60px
  background #ccc
  input
    width 80%
    height 60px
.scrollWrapper 
  position absolute
  left  0
  right  0
  bottom  0
  top 0
  overflow hidden
  .alert
    position absolute
    width 70%
    top 50%
    left 50% 
    transform translateX(-50%) translateY(-50%)
    background rgba(0,0,0,.7)
    min-height 300px
  .contentWrap
    height calc(100% - 60px)
    margin-bottom 60px
    box-sizing border-box
      
  .bottomInput
    position absolute
    bottom 0
    left 0
    right  0
    width 100%
    height 60px
    background #ccc
    input
      width 80%
      height 60px
 